{
  "name": "flashcard-app",
  "version": "1.0.1",
  "description": "A capybara-themed flashcard quiz",
  "author": "Gary",
  "main": "main.js",
  "scripts": {
    // Build a macOS x64 .dmg
    "build:mac-x64": "electron-builder --mac dmg --arch=x64",

    // Build a macOS arm64 .dmg
    "build:mac-arm64": "electron-builder --mac dmg --arch=arm64",

    // Build a Windows .exe
    "build:win": "electron-builder --win",

    // Build & publish the final artifact to GitHub
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "6.3.9"
  },
  "devDependencies": {
    "electron": "26.0.0",
    "electron-builder": "25.1.8"
  },
  "build": {
    "appId": "com.gary.flashcardapp",
    "productName": "Flashcard App",
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "mac": {
      // We'll build x64 and arm64 separately,
      // then merge them via 'electron-builder merge'
      "category": "public.app-category.education",
      "icon": "resources/myicon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "resources/myicon.ico",
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "builder-G",
        "repo": "flashcard-app",
        "releaseType": "release"
      }
    ]
  }
}
