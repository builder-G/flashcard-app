{
  "name": "flashcard-app",
  "version": "1.0.1",
  "description": "A capybara-themed flashcard quiz",
  "author": "Gary",
  "main": "main.js",
  "scripts": {
    "build:mac-x64": "electron-builder --mac dmg --x64 --publish always",
    "build:mac-arm64": "electron-builder --mac dmg --arm64 --publish always",
    "build:win": "electron-builder --win --publish always",
    "publish": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "6.3.9"
  },
  "devDependencies": {
    "electron": "26.0.0",
    "electron-builder": "25.1.8"
  },
  "build": {
    "appId": "com.gary.flashcardapp",
    "productName": "Flashcard App",
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "resources/myicon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "resources/myicon.ico",
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "builder-G",
        "repo": "flashcard-app",
        "releaseType": "release"
      }
    ]
  }
}
